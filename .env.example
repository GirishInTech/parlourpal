# Copy this file to .env and fill in your actual values.
# NEVER commit the real .env file to git.

# Django
SECRET_KEY=your-django-secret-key-here
DEBUG=True

# Site URL (change in production)
SITE_URL=http://127.0.0.1:8000

# Database (Supabase Postgres â€” leave blank to use local SQLite)
SUPABASE_DB_CONNECTION_STRING=

# Cloudinary (for media storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://your-api-key:your-api-secret@your-cloud-name

# Google / Vertex AI
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_VERTEX_API_KEY=your-vertex-api-key
GCP_PROJECT_ID=your-gcp-project-id
VERTEX_IMAGE_ENDPOINT=https://us-central1-aiplatform.googleapis.com/v1/projects/YOUR_PROJECT/locations/us-central1/publishers/google/models/imagen-4.0-generate-preview-06-06:predict
# Path to your downloaded GCP service account JSON (keep outside repo or in secrets/ which is gitignored)
GOOGLE_APPLICATION_CREDENTIALS=secrets/your-service-account.json

# Cohere
COHERE_API_KEY=your-cohere-api-key

# Gmail SMTP (for email verification)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
